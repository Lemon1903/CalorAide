<HistoryItem>:
    _is_shorten: True
    padding: 0, dp(5) # dp(8), dp(5), dp(0), dp(5)
    adaptive_height: True
    on_release: self._is_shorten = not self._is_shorten

    # canvas.after:
    #     Color:
    #         rgba: [1, 1, 1, 0.5]
    #     Line:
    #         points: (self.x, self.y, self.x + self.width, self.y)

    MDLabel:
        text: root.food_name
        font_name: "Poppins-Regular"
        font_size: 18
        shorten: root._is_shorten
        shorten_from: "right"
        size: self.texture_size
        size_hint_y: None

    MDLabel:
        text: f"{root.calorie_amount} k/cal"
        font_name: "Poppins-Regular"
        font_size: 18
        halign: "center"
