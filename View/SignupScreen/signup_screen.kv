<SignupScreenView>:

    Image:
        source: "assets/images/DarkBG 4.png"
        pos_hint: {"center_x":0.5, "center_y":0.5}
        allow_stretch: True

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x":0.5, "center_y":0.84}
        MDLabel:
            text: "SIGN-UP"
            font_name: "Poppins-Medium"
            font_size: 40
            theme_text_color: "Custom"
            text_color: "white"
            halign: "center"
            valign: "top"
    
    MDFloatLayout:
    #Confirm Button
        MDFillRoundFlatButton:
            id: btn
            text: "CONFIRM"
            font_name: "Poppins-SemiBold"
            text_color: "white"
            md_bg_color: "#7B56BA"
            pos_hint: {"center_x": .49, "center_y": .24}
            on_press: root.controller.check_txt_field()
    
    MDFloatLayout:
        required: False
        Text:
            id: user
            hint_text: "Username"
            pos_hint: {"center_x": .5,"center_y": .7}
            on_focus:
                if root.ids.user.text == "": root.ids.user.required = True
                else : root.ids.user.required = False
            helper_text_mode: "on_error"
            helper_text: "Enter Username"
        Text:
            id: passw
            hint_text:"Password"
            pos_hint: {"center_x": .5, "center_y": .56}
            on_focus:
                if root.ids.passw.text == "": root.ids.passw.required = True
                else : root.ids.passw.required = False
            helper_text_mode: "on_error"
            helper_text: "Enter Password"
        
        Text:
            id:conpass
            hint_text:"Confirm Password"
            pos_hint: {"center_x": .5, "center_y": .42}
            on_focus:
                if root.ids.conpass.text == "": root.ids.conpass.required = True
                else : root.ids.conpass.required = False
            helper_text_mode: "on_error"
            helper_text: "Re-type Password"

<Text@MDTextField>:
    mode: "rectangle"
    font_name: "Poppins-Regular"
    size_hint_x: .65
    line_color_normal: "white"
    hint_text_color_normal: "white"
    hint_text_color_focus: "white"
    text_color_normal: "white"
