<SignupScreenView>:
    MDAnchorLayout:
        anchor_x: "left"
        anchor_y: "top"

        MDIconButton:
            icon: "chevron-left-circle"
            icon_size: sp(40)
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color
            on_release: root.change_screen("right", "login screen")

    MDFloatLayout:
        MDLabel:
            text: "SIGN-UP"
            font_name: "Poppins-Medium"
            font_size: 40
            theme_text_color: "Custom"
            text_color: "white"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.84}

        # Confirm Button
        MDFillRoundFlatButton:
            id: btn
            text: "CONFIRM"
            font_name: "Poppins-SemiBold"
            text_color: "white"
            md_bg_color: self.theme_text_color
            size_hint_x: 0.35
            pos_hint: {"center_x": 0.49, "center_y": 0.24}
            on_press: root.check_text_field()

    MDFloatLayout:
        id: form_layout

        Text:
            # id: username
            hint_text: "Username"
            pos_hint: {"center_x": 0.5,"center_y": 0.7}
            helper_text: "Enter Username"

        Text:
            # id: password
            hint_text:"Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.56}
            helper_text: "Enter Password"

        Text:
            # id: confirm_password
            hint_text:"Confirm Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            helper_text: "Re-type Password"


<Text@MDTextField>:
    mode: "rectangle"
    font_name: "Poppins-Regular"
    size_hint_x: 0.65
    line_color_normal: "red" if self.error else "white"
    hint_text_color_normal: "white"
    hint_text_color_focus: "white"
    text_color_normal: "white"
    helper_text_mode: "on_error"
    on_text: self.error = not self.text
    on_focus: self.required = not self.text
