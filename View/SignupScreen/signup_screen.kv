<SignupScreenView>:
    Image:
        source: "assets/images/DarkBG 4.png"
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        allow_stretch: True

    MDFloatLayout:
        MDLabel:
            text: "SIGN-UP"
            font_name: "Poppins-Medium"
            font_size: 40
            theme_text_color: "Custom"
            text_color: "white"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y":0.84}

        # Confirm Button
        MDFillRoundFlatButton:
            id: btn
            text: "CONFIRM"
            font_name: "Poppins-SemiBold"
            text_color: "white"
            md_bg_color: "#7B56BA"
            pos_hint: {"center_x": 0.49, "center_y": 0.24}
            on_press: root.controller.check_text_field()

    MDFloatLayout:
        Text:
            id: username
            hint_text: "Username"
            pos_hint: {"center_x": 0.5,"center_y": 0.7}
            on_focus:
                if self.text == "": self.required = True
                else : self.required = False
            helper_text: "Enter Username"

        Text:
            id: password
            hint_text:"Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.56}
            on_focus:
                if self.text == "": self.required = True
                else : self.required = False
            helper_text: "Enter Password"

        Text:
            id: confirm_password
            hint_text:"Confirm Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            on_focus:
                if self.text == "": self.required = True
                else : self.required = False
            helper_text: "Re-type Password"

<Text@MDTextField>:
    mode: "rectangle"
    font_name: "Poppins-Regular"
    size_hint_x: .65
    line_color_normal: "white"
    hint_text_color_normal: "white"
    hint_text_color_focus: "white"
    text_color_normal: "white"
    helper_text_mode: "on_error"
