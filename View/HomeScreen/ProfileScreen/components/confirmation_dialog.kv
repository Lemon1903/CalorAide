<ConfirmationDialog>:
    height: container.height

    MDCard:
        id: container
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        radius: dp(10)
        height: self.minimum_height
        size_hint_y: None
        md_bg_color: root.theme_cls.bg_dark

        MDLabel:
            text: root.title
            font_style: "H6"
            bold: True
            markup: True
            valign: "top"
            height: self.texture_size[1]
            size_hint_y: None

        MDBoxLayout:
            id: confirmation_items
            orientation: "vertical"
            padding: 0, dp(8)
            spacing: dp(15)
            adaptive_height: True

            MDSeparator:
            MDSeparator:

        MDAnchorLayout:
            anchor_x: "right"
            height: dp(28)
            size_hint_y: None

            MDBoxLayout:
                adaptive_size: True
                spacing: dp(8)

                MDFlatButton:
                    text: "Confirm"
                    on_release:
                        root.dismiss()
                        root.callback(root.selected_item)

                MDFlatButton:
                    text: "Cancel"
                    on_release: root.dismiss()


<ConfirmationItem>:
    adaptive_height: True

    MDCheckbox:
        id: checkbox
        group: "check"
        ripple_scale: 0.0
        size_hint_x: 0.15
        disabled_color: app.theme_cls.primary_light
        color_active: app.theme_cls.primary_light
        color_inactive: "white"
        on_active: root._on_active(*args)

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint_x: 0.85

        MDLabel:
            text: root.type
            height: self.texture_size[1]
            size_hint_y: None

        MDLabel:
            id: description
            text: root.description
            theme_text_color: "Hint"
            font_size: sp(13)
            height: 0
            opacity: 0.0
            size_hint_y: None
