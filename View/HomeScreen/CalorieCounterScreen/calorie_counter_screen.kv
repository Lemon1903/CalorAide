<CalorieCounterScreenView>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(0), dp(10)
        size_hint_x: 0.95
        pos_hint: {'center_x': 0.5}

        # calorie goal and mode type
        MDCard:
            orientation: 'vertical'
            radius: dp(10)
            spacing: dp(10)
            padding: dp(20)
            height: self.minimum_height
            size_hint_y: None
            md_bg_color: app.theme_cls.primary_color

            MDLabel:
                _cg_color: "#F3AAA0" if root.calorie_goal < 0 else "#ffffff"
                markup: True
                text: f"[size=55][color={self._cg_color}]{root.calorie_goal}[/color][size=32]k/cal[/size]"
                font_name: "Poppins-SemiBold"
                halign: "center"
                height: dp(55)
                size_hint_y: None

            MDLabel:
                markup: True
                text: f"[size=16]WEIGHT {root.user_mode}[/size]"
                font_name: "Poppins-Regular"
                halign: "center"
                height: self.texture_size[1]
                size_hint_y: None

        MDLabel:
            markup: True
            text: "[size=16]INTAKE HISTORY[/size]"
            font_name: "Poppins-SemiBold"
            halign: "center"
            height: self.texture_size[1]
            size_hint_y: None

        # intake history table
        MDCard:
            orientation: 'vertical'
            radius: dp(10)
            padding: dp(15)
            md_bg_color: app.theme_cls.primary_color

            MDBoxLayout:
                adaptive_height: True

                MDLabel:
                    markup: True
                    text: "[size=18][color=#21005d]Item[/color][/size]"
                    font_name: "Poppins-Bold"
                    halign: "center"
                    height: self.texture_size[1]
                    size_hint_y: None

                MDLabel:
                    markup: True
                    text: "[size=18][color=#21005D]Calories[/color][/size]"
                    font_name: "Poppins-Bold"
                    halign: "center"
                    height: self.texture_size[1]
                    size_hint_y: None

            MDScrollView:
                MDList:
                    id: intake_history
                    padding: dp(0)

        # buttons
        MDBoxLayout:
            id: button_box
            spacing: dp(25)
            size_hint_x: 0.6
            adaptive_height: True
            pos_hint: {'center_x': 0.5}

            MDFillRoundFlatButton:
                text: "Add"
                font_name: "Poppins-SemiBold"
                size_hint_x: 1
                on_release: root.add_intake_dialog.open()

            MDFillRoundFlatButton:
                text: "History"
                font_name: "Poppins-SemiBold"
                size_hint_x: 1
                on_release: root.controller.change_screen("up", "history screen")
