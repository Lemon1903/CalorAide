<CalorieCounterScreenView>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(0), dp(10)
        size_hint_x: 0.95
        pos_hint: {'center_x': 0.5}

        # calorie goal and mode type
        MDCard:
            orientation: 'vertical'
            radius: dp(10)
            spacing: dp(10)
            padding: dp(20)
            height: calorie_goal.height + mode.height + self.spacing + self.padding[0] * 2
            size_hint_y: None
            md_bg_color: app.theme_cls.primary_color

            MDLabel:
                id: calorie_goal
                markup: True
                text: f"[size=62]{root.calorie_goal}[size=34]k/cal[/size]"
                font_name: "Poppins-SemiBold"
                halign: "center"
                height: dp(55)
                size_hint_y: None

            MDLabel:
                id: mode
                markup: True
                text: "[size=16]WEIGHT GAIN[/size]"
                font_name: "Poppins-Regular"
                halign: "center"
                height: dp(20)
                size_hint_y: None

        MDLabel:
            markup: True
            text: "[size=16]INTAKE HISTORY[/size]"
            font_name: "Poppins-SemiBold"
            halign: "center"
            height: dp(30)
            size_hint_y: None

        # intake history table
        MDCard:
            orientation: 'vertical'
            radius: dp(10)
            padding: dp(15)
            md_bg_color: app.theme_cls.primary_color

            MDBoxLayout:
                adaptive_height: True

                MDLabel:
                    markup: True
                    text: "[size=18][color=#21005d]Item[/color][/size]"
                    font_name: "Poppins-Bold"
                    halign: "center"
                    height: dp(25)
                    size_hint_y: None

                MDLabel:
                    markup: True
                    text: "[size=18][color=#21005d]k/cal[/color][/size]"
                    font_name: "Poppins-Bold"
                    halign: "center"
                    height: dp(25)
                    size_hint_y: None

            MDScrollView:
                MDList:
                    id: intake_history
                    padding: dp(0)

                    # MDLabel:
                    #     text: "No food intakes\nfor today yet"
                    #     font_name: "Poppins-SemiBold"
                    #     font_size: sp(20)
                    #     halign: "center"
                    #     height: intake_history.parent.height
                    #     size_hint_y: None

        # buttons
        MDBoxLayout:
            id: buttons
            spacing: dp(25)
            size_hint_x: 0.6
            adaptive_height: True
            pos_hint: {'center_x': 0.5}

            MDFillRoundFlatButton:
                text: "Add"
                font_name: "Poppins-SemiBold"
                size_hint_x: 1
                on_release: root._open_add_intake_dialog()

            MDFillRoundFlatButton:
                text: "History"
                font_name: "Poppins-SemiBold"
                size_hint_x: 1
