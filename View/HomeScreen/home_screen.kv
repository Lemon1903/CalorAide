#:import ProfileScreenView View.HomeScreen.ProfileScreen
#:import CalorieCounterScreenView View.HomeScreen.CalorieCounterScreen

<HomeScreenView>:
    MDBottomNavigation:
        transition_duration: 0
        font_name: "Poppins-Regular"

        # Profile Screen tab
        MDBottomNavigationItem:
            name: "profile screen"
            text: "Profile"
            icon: "account"

            ProfileScreenView:
                id: profile_screen
                name: self.parent.name
                model: root.model
                controller: root.controller

        # Calorie Screen tab
        MDBottomNavigationItem:
            name: "calorie counter screen"
            text: "Calorie Counter"
            icon: "nutrition"

            CalorieCounterScreenView:
                id: calorie_screen
                name: self.parent.name
                model: root.model
                controller: root.controller
