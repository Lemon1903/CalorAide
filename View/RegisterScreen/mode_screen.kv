<ModeScreenView>:

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x":0.5, "center_y":0.90}

        MDLabel:
            text: "MODE"
            font_name: "Poppins-Medium"
            font_size: 40
            theme_text_color: "Custom"
            text_color: "white"
            halign: "center"
            valign: "top"

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x":0.5, "center_y":0.85}

        DisplayLabel:
            id: bmi_amount

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x":0.5, "center_y":0.78}

        DisplayLabel:
            id: bmi

    MDFloatLayout:
        orientation: "vertical"

        Modes:
            id: gain
            text: "GAIN"
            pos_hint: {"center_x":0.5, "center_y":0.66}
            on_press: self.parent.parent.chosen_button = "gain"
            on_release: self.parent.parent.modify_mode_buttons(self.parent.parent.chosen_button)

        Modes:
            id: maintain
            text: "MAINTAIN"
            pos_hint: {"center_x":0.5, "center_y":0.50}
            on_press: self.parent.parent.chosen_button = "maintain"
            on_release: self.parent.parent.modify_mode_buttons(self.parent.parent.chosen_button)

        Modes:
            id: lose
            text: "LOSE"
            pos_hint: {"center_x":0.5, "center_y":0.34}
            on_press: self.parent.parent.chosen_button = "lose"
            on_release: self.parent.parent.modify_mode_buttons(self.parent.parent.chosen_button)

    MDFloatLayout:
        MDFillRoundFlatButton:
            id: confirm
            text: "CONFIRM"
            text_color: "white"
            font_name: "Poppins-SemiBold"
            md_bg_color: "#7B56BA"
            pos_hint: {"center_x": .50, "center_y": .20}
            on_press: self.parent.parent.get_user_mode()

<Modes@MDRaisedButton>:
    font_name: "Poppins-Bold"
    font_size: 20
    halign: "center"
    valign: "center"
    size_hint_x: .6
    size_hint_y: .12
    disabled_color: "#0E0E0E"
    disabled: False

<DisplayLabel@MDLabel>:
    markup: True
    font_name: "Poppins-SemiBold"
    font_size: 16
    text_color: "white"
    halign: "center"
    valign: "center"
