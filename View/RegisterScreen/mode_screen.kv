<ModeScreenView>:
    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.9}

        MDLabel:
            text: "MODE"
            font_name: "Poppins-Medium"
            font_size: sp(40)
            theme_text_color: "Custom"
            text_color: "white"
            halign: "center"
            valign: "top"

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.85}

        DisplayLabel:
            id: bmi_amount
            text: f"Your BMI is: [color=#F3AAA0]{root.user_bmi_amount:.2f}[/color]"

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.78}

        DisplayLabel:
            id: bmi
            text: f"You are categorized as\n[color=#F3AAA0]{root.user_bmi}[/color]"
            font_size: sp(19)

    MDFloatLayout:
        id: modes_list

        Modes:
            id: gain
            text: "GAIN"
            pos_hint: {"center_x": 0.5, "center_y": 0.66}
            on_release: root.modify_mode_buttons(self)

        Modes:
            id: maintain
            text: "MAINTAIN"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: root.modify_mode_buttons(self)

        Modes:
            id: lose
            text: "LOSE"
            pos_hint: {"center_x": 0.5, "center_y": 0.34}
            on_release: root.modify_mode_buttons(self)

    MDFloatLayout:
        MDFillRoundFlatButton:
            id: confirm
            text: "CONFIRM"
            text_color: "white"
            font_name: "Poppins-SemiBold"
            size_hint_x: 0.3
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_press: root.get_user_mode()


<Modes@MDRectangleFlatButton>:
    disabled: False
    disabled_color: "#0E0E0E"
    font_name: "Poppins-Bold"
    font_size: sp(20)
    text_color: "white"
    halign: "center"
    valign: "center"
    size_hint: 0.6, 0.12
    md_bg_color: app.theme_cls.primary_color


<DisplayLabel@MDLabel>:
    markup: True
    bold: True
    font_name: "Poppins-SemiBold"
    font_size: sp(16)
    text_color: "white"
    halign: "center"
    valign: "center"
