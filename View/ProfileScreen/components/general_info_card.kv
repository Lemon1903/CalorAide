# rules
<GeneralInformationCard>:
    current_layout: inner
    radius: 10
    padding: dp(20), dp(15)
    height: self.current_layout.height + self.padding[1] * 2
    size_hint_y: None
    md_bg_color: app.theme_cls.primary_color

    ProfileInformationLayout:
        id: inner


<ProfileInformationLayout>:
    orientation: 'vertical'
    adaptive_height: True
    spacing: dp(10)

    ProfileLabel:
        text: "General Information"

    ProfileLabel:
        text: "Height: 170cm"

    ProfileLabel:
        text: "Weight: 55kg"

    MDRectangleFlatButton:
        text: "Edit Details"
        size_hint_x: 1
        md_bg_color: "gray"
        on_release: root.on_edit_profile_info()


<EditInformationLayout>:
    orientation: 'vertical'
    adaptive_height: True
    spacing: dp(10)

    ProfileLabel:
        text: "Edit Information"

    PRofileTextField:
        hint_text: "Height"

    PRofileTextField:
        hint_text: "Weight"

    MDRectangleFlatButton:
        text: "Done Editing"
        size_hint_x: 1
        md_bg_color: "gray"
        on_release: root.submit_new_profile_info()


# dynamic classes
<ProfileLabel@MDLabel>:
    color: "white"
    height: dp(20)
    size_hint_y: None


<PRofileTextField@MDTextField>:
    mode: "rectangle"
    text_color_focus: "black"
    hint_text_color_focus: "black"
    line_color_focus: "black"
