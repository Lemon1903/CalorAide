#:import GeneralInformationCard View.ProfileScreen.components

<ProfileScreenView>:
    # main layout that holds all widgets
    MDScrollView:
        size_hint_x: 0.95
        pos_hint: {'center_x': 0.5}

        # scrollable content
        MDList:
            spacing: dp(10)

            # the upper part for image and username
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(30)
                padding: dp(20)
                height: dp(200)
                size_hint_y: None

                FitImage:
                    source: "assets/images/sample.png"
                    radius: 50
                    size_hint: 0.5, 0.5
                    pos_hint: {"center_x": 0.5}

                MDLabel:
                    text: 'Khent David Roscoe A. Alba'
                    halign: 'center'
                    height: dp(20)
                    size_hint_y: None

            # buttons
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                adaptive_height: True

                ChangeButton:
                    text: "CHANGE MODE: [b][color=#f3aaa0]GAIN[/color][/b]"

                ChangeButton:
                    text: "CHANGE ACTIVITY: [b][color=#f3aaa0]LIGHT[/color][/b]"

            # general information card
            GeneralInformationCard:


# dynamic class
<ChangeButton@MDRectangleFlatButton>:
    size_hint_x: 0.7
    pos_hint: {'center_x': 0.5}
    text_color: "white"
    md_bg_color: app.theme_cls.primary_dark
    line_color: app.theme_cls.primary_dark
